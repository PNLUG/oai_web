<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="web_mobile_template" name="Mobile Menu Template">
        <t t-call="website.layout">
            <div id="menu" class="container">
                <div class="row justify-content-center">
                    <h4>Mobile Menu</h4>
                </div>
                <div id="samle_route">
                    <!-- sample menu row -->
                    <hr/>
                    <div id="sample_route" class="row justify-content-center">
                        <a href="/route_to_sample_app" class="btn btn-danger btn-lg btn-block mb8"
                            >Sample App Name</a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- website page -->
    <record id="web_mobile_page" model="website.page">
        <field name="name">Mobile Menu</field>
        <field name="website_published">True</field>
        <field name="url">/mobile</field>
        <field name="view_id" ref="web_mobile_template"/>
    </record>

    <!-- website page menu -->
    <record id="web_mobile_menu" model="website.menu">
        <field name="name">Mobile Menu</field>
        <field name="page_id" ref="web_mobile_page"/>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">80</field>
    </record>
</odoo>
